- provide(:title, "Log in")

.row
  .large-6.large-offset-3.columns
    %h1.form_title TookiTi!
    %h4.form_subtitle we can't wait to see you in
    = form_for(:session, url: login_path) do |f|
      .large-12.columns
        = f.text_field :email, class: 'radius', placeholder: 'email'
        = f.password_field :password, class: 'radius', placeholder: 'password'
        = link_to '(forgot password)', new_password_reset_path, class: 'right'
        = f.label :remember_me do
          = f.check_box :remember_me
          %span remember me on this computer
        = f.submit 'log in', class: 'button expand success radius'
    %p.form_title
      new user?
      %br
        = link_to 'sign up now!', signup_path